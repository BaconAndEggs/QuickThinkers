<div class="header">
    <h1>Create Topic</h1>
</div>
<%= form_tag("save_new_topic", method: "post") do %>
  <%= label_tag(:topic_name, "Topic Name:") %>
  <%= text_field_tag(:topic_name) %>
  <br>
  <%= label_tag(:topic_description, "Topic Description:") %>
  <%= text_field_tag(:topic_description) %>
  <br>
  <%= submit_tag("Create") %>
<% end %>
